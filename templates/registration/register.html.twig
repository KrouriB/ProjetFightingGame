{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block meta %}
    <meta name="description" content="page d'inscription">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/notCo.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/regi_log.css') }}">
{% endblock %}

{% block body %}
    <main class="flex">
        {% include "/nav/navNotConnectedMobile.html.twig" %}
        <section class="shortSide flex">
            {% include "/nav/navNotConnected.html.twig" %}
        </section>
        <section class="longSide flex">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
        
            <h1>Inscrivez Vous</h1>
        
            {{ form_errors(registrationForm) }}
        
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                <div class="agreeTerms">
                    <div>
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms) }}
                    </div>
                    <a href="{{ path('app_agreeTerms') }}">Lire les conditions générales</a>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
        
                <div class="bottomBlock flex">
                    <a href="{{ path('app_login') }}">Connexion <i class="fa-solid fa-arrow-up-right-from-square"></i></a>
                    <button type="submit" class="btn">Register</button>
                </div>
        
            {{ form_end(registrationForm) }}
            {% include "/footer.html.twig" %}
        </section>
    </main>
{% endblock %}
