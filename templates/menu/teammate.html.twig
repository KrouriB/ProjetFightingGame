{% extends 'base.html.twig' %}

{% block meta %}
    <meta name="description" content="retrouver ici vos équipier et la possibilité de créer un nouvel équipier">
{% endblock %}

{% block title %}{{ 'é'|upper }}quipier{% endblock %}

{% block body %}
    <main class='flex'>
        <section class="shortSide flex">
            {% include "/nav/navMenuDesktop.html.twig" %}
            {% include "/nav/navMenuMobile.html.twig" %}
        </section>
        <section class="longSide">
            <header class="topBar flex">
                <input id="menu__toggle" type="checkbox" />
                <label class="menu__btn" for="menu__toggle">
                    <span></span>
                </label>
                <div class="pseudo desktop">{{ app.user.userIdentifier }}</div>
                <div class="parameter"></div>
            </header>
            <div id="menuMain">
                {% for teammate in equipes %}
                    <div class="teammate">
                        <div>
                            <div>
                                {# <figure></figure>
                                <figure></figure> #}
                                <div>{{ teammate.weapon.name }}</div>
                                <div>{{ teammate.accessory.name }}</div>
                            </div>
                            <figure>
                                <figcaption>{{ teammate.personnage.name }}</figcaption>
                            </figure>
                        </div>
                        <div>
                            <span>{{ teammate.personnage.category.nameCategory }}</span>
                            <span>|</span>
                            <span>{{ teammate.personnage.type.nameType }}</span>
                        </div>
                    </div>
                {% endfor %}
                <div class="teammate">
                    <span><a href="{{ path('app_creation_teammate') }}">+</a></span>
                </div>
            </div>
        </section>
    </main>
{% endblock %}