{% extends 'base.html.twig' %}

{% block meta %}
    <meta name="description" content="menu principale du jeu une fois connecter">
{% endblock %}

{% block title %}Menu{% endblock %}

{% block body %}
    <main class='flex'>
        {# {{ dump(selected) }} #}
        <section class="shortSide flex">
            <nav class="desktopFlex">
                {# <div class="menuButton"><a href="">{{ 'start'|upper }}</a></div> #}
                <div class="menuButton"><a href="{{ path('app_teammate') }}">{{ 'équipier'|upper }}</a></div>
                <div class="menuButton"><a href="">{{ 'échoppe'|upper }}</a></div>
                <div class="menuButton"><a href="{{ path('app_stock_personnage') }}">{{ 'inventaire'|upper }}</a></div>
                <div class="menuButton"><a href="{{ path('app_creation_personnage') }}">{{ 'création'|upper }}</a></div>
                <div class="menuButton"><a href="{{ path('app_rank') }}">{{ 'classement'|upper }}</a></div>
                <div class="menuButton"><a href="{{ path('app_rule') }}">{{ 'règle'|upper }}</a></div>
                <div class="menuButton"><a href="{{ path('app_logout') }}">{{ 'déconnexion'|upper }}</a></div>
            </nav>
            <nav class="mobileFlex">
                <input id="menu__toggle" type="checkbox" />
                <label class="menu__btn" for="menu__toggle">
                    <span></span>
                </label>
                <span class="pseudo">{{ app.user.userIdentifier }}</span>
                <ul>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_teammate') }}">{{ 'équipier'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="">{{ 'échoppe'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_stock_personnage') }}">{{ 'inventaire'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_creation_personnage') }}">{{ 'créa. perso.'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_creation_weapon') }}">{{ 'créa. arme.'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_creation_accessory') }}">{{ 'créa. équip'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_rank') }}">{{ 'classement'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_rule') }}">{{ 'règle'|upper }}</a></div>
                    </li>
                    <li>
                        <div class="menuButton"><a href="{{ path('app_logout') }}">{{ 'déconnexion'|upper }}</a></div>
                    </li>
                </ul>
            </nav>
        </section>
        <section class="longSide">
            <header class="topBar flex">
                <div class="buttonNav mobile">
                    <span></span><span></span><span></span>
                </div>
                {{ form_errors(teammate) }}

                {{ form_start(teammate, { 'attr' : { 'class': 'teamSelector flex' } }) }}
                    {{ form_widget(teammate.Start) }}
                    {{ form_widget(teammate.equipe) }}
                {{ form_end(teammate) }}
                <div class="pseudo desktop">{{ app.user.userIdentifier }}</div>
                <div class="parameter"><i class="fa-solid fa-gear"></i></div>
            </header>
            <div id="menuMain">
                <ol class="carousel__viewport">
                    {% for equipier in equipes %}
                        {# futur carousel #}
                    {% endfor %}
                </ol>
            </div>
        </section>
    </main>
{% endblock %}